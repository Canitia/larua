<body class="amp-template">
    <header class="main-header">
        <nav class="brand-logo">
            <a href="{{@blog.url}}" class="headerurl">{{@blog.title}}</a>
        </nav>
    </header>

    <main class="content" role="main">
    {{#post}}
        <article class="post">
            <header class="post-header">
                <section class="post-meta">
                <span class="card-title">
                    <p class="posttitle center">{{title}}</p>
                </span>
                <div class="post-subitems">
                    <i class="fa fa-clock-o"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
                    <i class="fa fa-user" aria-hidden="true"></i>{{author}}
                </div>
                </section>
            </header>
            {{#if image}}
            <figure class="post-image">
                <amp-img src="{{image absolute="true"}}" width="600" height="400" layout="responsive"></amp-img>
            </figure>
            {{/if}}
            <section class="card-content">

                {{amp_content}}

            </section>
            {{> 'post/author-section'}}
        </article>
 {{/post}}
    </main>
    <div class="socialfooter">
            <a href="{{@blog.url}}/rss" target="_blank"><i class="fa fa-rss fa-2x"></i></a>
            {{#if @blog.facebook}}
            <a href="{{facebook_url}}" target="_blank"><i class="fa fa-facebook fa-2x"></i></a>
            {{/if}}
            {{#if @blog.twitter}}
            <a href="{{twitter_url}}" target="_blank"><i class="fa fa-twitter fa-2x"></i></a>
            {{/if}}
            <p class="right">
            <a href="https://michaelboumann.info/collection/#canitiajr" target="_blank">powered by: Canitia Jr.</a>
            </p>
