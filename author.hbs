{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="row">
{{#is "author"}}
  {{#author}}
  <div class="tag_heading center-align" style="background-image: url({{#if cover}}{{cover}}{{else}}{{asset "images/fallback-user.jpg"}}{{/if}}); background-repeat: no-repeat; background-size: cover; height: 282px">
    <p class="posttitle">{{name}}</p>
    <img src="{{#if image}}{{image}}{{/if}}" class="avatar-page center-align" title="Image of {{name}}" alt="Image of {{name}}" />
      <div class="socialfooter-top center hide">
      {{#if facebook}}<a href="{{facebook_url}}" target="blank"><i class="fa fa-facebook fa-2x"></i></a>{{/if}}
      {{#if twitter}}<a href="{{twitter_url}}" target="blank"><i class="fa fa-twitter fa-2x"></i></a>{{/if}}
      </div>
  </div>
  {{/author}}
{{/is}}

<div class="main-content col s12 m12 l12">
  {{> 'post/card-basic'}}
</div>
</div>
