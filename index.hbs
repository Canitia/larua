{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

                    {{#foreach posts}}
                    <div class="row card">
                      <img class="content-images" src="{{#if image}}
                        {{image}}
                      {{else}}
                          {{@blog.cover}} {{/if}}" />

                                    <article>
                                    <h1 class="text-left-title"><a href="{{url}}">{{title}}</a></h1>
                                    <h3>
                                    <p class="text-left postdate">{{date format='YYYY-MM-DD'}}</p>
                                    {{#if tags}}
                                        <p class="text-left postdate">
                                        Tags: {{tags separator=" | "}}
                                        </p>
                                        {{/if}}
                                    </h3>
                                        <p class="text-justify">{{excerpt}}...</p><br />

                                </article>
                      </div>
                    {{/foreach}}
