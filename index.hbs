{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="row">
<div class="main-content col s12 m12 l9">

    <div class="row featured hide-on-small-only">

    {{#get "posts" limit="3" filter="featured:true" order="published_at desc" as |featured| }}
      {{#foreach featured}}
          <div class="col m4">
              <article class="hoverable">
                <a href="{{url}}"><img class="content-images-featured" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" />
                    </a>
                    <p class="text-left postdate postdate-featured blue darken-4"><i class="fa fa-star"> Featured</i>
                    </p>
                          <h1 class="text-left-title-featured blue darken-4"><a href="{{url}}">{{title}}</a></h1>
                    </article>
          </div>
     {{/foreach}}
     {{/get}}
    </div>

      {{#foreach posts}}
      <div class="card">
        <article>
              <div>
                <a href="{{url}}"><img class="content-images" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" />
                  </a>
            </div>
            <div>
                      <h1 class="text-left-title"><a href="{{url}}">{{title}}</a></h1>
                      <p class="text-left postdate">{{#if featured}}<i class="fa fa-star"></i>{{/if}} <i class="fa fa-calendar"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time></p>
                      <p class="text-justify">
                            {{excerpt}}...
                      <a class="waves-effect waves-light btn blue darken-4" id="read_more_custom" href="{{url}}">...</a>
                      </p>
            </div>
        </article>
        </div>
      {{/foreach}}
</div>
    {{> sidebar}}
</div>
