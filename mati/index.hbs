{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

  <div class="maincontent">
  {{> sidebar}}
                    {{#foreach posts}}
                    {{#if featured}}

                    <div class="row-featured">
                          <article>
                            <a href="{{url}}"><img class="content-images" src="{{#if image}}
                              {{image}}
                            {{else}}
                                {{@blog.cover}} {{/if}}" />
                                </a>

                                      <h1 class="text-left-title"><a href="{{url}}">{{title}}</a></h1>
                                    <h3>
                                    <p class="text-left postdate postdate-featured"><i class="fa fa-user">{{author}}</i><i class="fa fa-star">Featured</i> <i class="fa fa-calendar"></i> {{date format='YYYY-MM-DD'}}</p>
                                    {{#if tags}}
                                        <p class="text-left postdate">
                                        Tags: {{tags separator=" | "}}
                                        </p>
                                        {{/if}}
                                    </h3>
                                    <hr>
                                    <p class="text-justify">{{excerpt}}...
                                    </p><br />
                                    <div class="readmore">
                                      <a href="{{url}}"><button class="btn" type="button"><span>Lees meer...</span></button></a>
                                    </div>
                                </article>
                      </div>

                    {{/if}}
                    {{/foreach}}

                    {{#foreach posts}}
                    {{#unless featured}}
                    <div class="row">
                          <article>
                            <a href="{{url}}"><img class="content-images" src="{{#if image}}
                              {{image}}
                            {{else}}
                                {{@blog.cover}} {{/if}}" />
                                </a>

                                      <h1 class="text-left-title"><a href="{{url}}">{{title}}</a></h1>
                                    <h3>
                                    <p class="text-left postdate"><i class="fa fa-user">{{author}}</i> <i class="fa fa-calendar"></i> {{date format='YYYY-MM-DD'}}</p>
                                    {{#if tags}}
                                        <p class="text-left postdate">
                                        Tags: {{tags separator=" | "}}
                                        </p>
                                        {{/if}}
                                    </h3>
                                    <hr>
                                        <p class="text-justify">{{excerpt}}
                                        </p><br />

                                        <div class="readmore">
                                          <a href="{{url}}"><button class="btn" type="button"><span>Lees meer...</span></button></a>
                                        </div>
                                </article>
                      </div>
                      {{/unless}}
                    {{/foreach}}
                  </div>
