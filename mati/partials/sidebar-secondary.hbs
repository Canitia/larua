<div class="sidebar-secondary">
  <address itemscope itemtype="http://schema.org/Person">
    <h4 class="authorname"><span itemprop="author">{{author.name}}</span></h4>
  {{#if author.image}}
  <div class="authorimage" style="background: url({{author.cover}});"><img src="{{author.image}}" itemprop="image" /></div>
  {{/if}}
  {{#if author.website}}
  <div class="authorwebsite"><a href="{{author.website}}" itemprop="url">{{author.website}}</a></div>
  {{/if}}
  </address>
  <p class="authorbio">{{author.bio}}</p>
</div>
