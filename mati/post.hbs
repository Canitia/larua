{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
                {{#post}}
                                    <article class="row-individualpost">
                                      <img class="content-images-individual" src="{{#if image}}
                                        {{image}}
                                      {{else}}
                                          {{@blog.cover}} {{/if}}"/>

                                    <h1 class="text-left-title"></i>{{title}}</h1>
                                    <h4><p class="text-left postdate"><i class="fa fa-user">{{author}}</i> <i class="fa fa-calendar"></i> {{date format='YYYY-MM-DD'}}</p>

                                    {{#if tags}}
                                        <p class="text-right postdate">
                                        Tags: {{tags separator=" | "}}
                                        </p>
                                        {{/if}}
                                    </h4>
                                    <hr>
                                    <p class="text-justify-individual">{{content}}</p>

                                    <br />

                                        {{> disqus}}


                                    </article>
                                    {{> sidebar-secondary}}
                {{/post}}
