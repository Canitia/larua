{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
  <div class="maincontent">
                    <div class="card">
                      <article>
                        <h1 class="text-left-title blue darken-4"><a href="{{url}}">{{title}}</a></h1>
                            <div class="card-left">
                              <a href="{{url}}"><img class="content-images" src="{{#if image}}{{image}}{{else}}{{@blog.cover}}{{/if}}" />
                                </a>
                          </div>
                          <div class="card-right">
                                    <p class="text-left postdate"><i class="fa fa-user">{{author}}</i> <i class="fa fa-calendar"></i> {{date format='YYYY-MM-DD'}}
                                    </p>
                                    <p class="text-justify">
                                          {{content}}...
                                        </p>
                          </div>
                      </article>
                  </div>
