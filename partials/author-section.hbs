{{#author}}
  <section class="author-profile">
    <h4 class="">Article written by <a href="{{url}}">{{name}}</a></h4>
    {{#if image}}
    <img src="{{image}}" alt="author image" class="avatar"/>
    {{/if}}
    <p class="author-bio">
    <strong>About {{name}}</strong><br />
    {{#if bio}}<p>{{bio}}</p>{{else}}<p>No bio information available</p>{{/if}}
    </p>
  </section>
{{/author}}
