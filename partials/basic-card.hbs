{{#foreach posts}}
<div class="card">
  <article>
        <div>
          <a href="{{url}}"><img class="content-images" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" />
            </a>
      </div>
      <div>
                <h1 class="text-left-title"><a href="{{url}}">{{title}}</a> {{#if featured}}<i class="fa fa-star"></i>{{/if}}</h1>
                <p class="text-left postdate"><i class="fa fa-calendar"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time></p>
                <p class="text-justify">
                      {{excerpt}}...
                <a class="waves-effect waves-light btn blue darken-4" id="read_more_custom" href="{{url}}">...</a>
                </p>
      </div>
  </article>
  </div>
{{/foreach}}
