<header>

<nav class="navbar navbar-expand-md navbar-dark justify-content-start">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  {{#if @site.logo}}

        <div class="logo-fixed d-flex d-sm-flex d-md-flex d-lg-flex">
          <a href="{{@site.url}}"><img src="{{@site.logo}}" alt="blog logo" class="logo-nav navbar-brand hvr-rotate" /></a>
        </div>

  {{else}}
  <a href="{{@site.url}}" class="navbar-brand headerurl">{{@site.title}}</a>
  {{/if}}
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
              <!-- Loop through the navigation items -->
              {{#foreach navigation}}
              <li class="nav-item{{#if current}} active{{/if}}">
                  <a href="{{url absolute="true"}}" class="nav-link">{{label}}</a>
              </li>
              {{/foreach}}
              
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  {{t "More"}}
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    {{#if @member}}
                    <a class="nav-link dropdown-item" href="{{@site.url}}/#/portal/account">{{t "My Account"}}</a>
                    <a class="nav-link dropdown-item" href="javascript:" data-members-signout>{{t "Sign-out"}}</a>
                    {{else}}
                    <a class="nav-link dropdown-item" href="{{@site.url}}/#/portal/signin">{{t "Sign-in"}}</a>
                    {{/if}}
                  {{#foreach @site.secondary_navigation }}
                    <a class="nav-link dropdown-item" href="{{url absolute="true"}}">{{label}}</a>
                  {{/foreach}}
                </div>
              </li>
    </ul>
  </div>
</nav>
</header>
