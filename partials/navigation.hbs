<header>

<nav class="navbar navbar-dark justify-content-center">
    {{#if @blog.logo}}
    <img src="{{@blog.logo}}" alt="logo" class="logo-top" />
    {{/if}}
  <a href="{{@blog.url}}" class="navbar-brand headerurl">{{@blog.title}}</a>
  <div id="navbarNav">
    <ul class="navbar-nav ml-auto">

                <!-- Loop through the navigation items -->
        {{#foreach navigation}}
        <li class="menu-item{{#if current}} active{{/if}}">
            <a href="{{url absolute="true"}}" class="nav-link">{{label}}</a>
        </li>
        {{/foreach}}
        <!-- End the loop -->
    </ul>
  </div>
</nav>

{{#is "index, home, post, page"}}
{{#if @blog.cover_image}}

  <img src="{{@blog.cover_image}}" alt="Cover image" class="cover-image" /></a>

{{/if}}

  <div class="top-socials">
        <a href="{{@blog.url}}/rss" target="_blank"><i class="fas fa-rss fa-2x"></i></a>
        {{#if @blog.facebook}}
          <a href="{{facebook_url @blog.facebook}}" target="_blank"><i class="fab fa-facebook fa-2x"></i></a>
        {{/if}}
        {{#if @blog.twitter}}
          <a href="{{twitter_url @blog.twitter}}" target="_blank"><i class="fab fa-twitter fa-2x"></i></a>
        {{/if}}  
  </div>
{{/is}}
</header>
