<header>
    <div class="navbar-fixed">
    <nav class="blue darken-4">
      <div class="nav-wrapper">
        <!-- check if a blog cover is active -->
        {{#if @blog.logo}}
        <img src="{{@blog.logo}}" alt="blog logo" class="logo left" />
        {{/if}}

        <p class="blogtitle left">
            <a href="{{@blog.url}}" class="headerurl">{{@blog.title}}</a>
        </p>

         <ul id="nav-mobile" class="right hide-on-med-and-down">

           <!-- Loop through the navigation items -->
           {{#foreach navigation}}
           <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
           {{/foreach}}
           <!-- End the loop -->
         </ul>
         <a href="#" data-activates="slide-out" class="button-collapse right"><i class="small mdi-navigation-menu"></i></a>

<ul id="slide-out" class="side-nav">
    <!-- Loop through the navigation items -->
    {{#foreach navigation}}
    <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
    {{/foreach}}
    <!-- End the loop -->
</ul>

</div>
</nav>

</div>

</header>
