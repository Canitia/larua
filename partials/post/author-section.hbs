{{#author}}
  <section class="author-profile" style="background-image: url('{{cover}}'); opacity: 0.9;">
    {{#if image}}
    <div class="avatar-section">
    <img src="{{image}}" class="avatar left" title="{{title}}" alt="Image of {{name}}"/>
    </div>
    {{/if}}
    <p class="author-bio">
    <strong>{{name}}</strong><br />
    {{#if bio}}{{bio}}{{else}}-{{/if}}
  </p>
