{{#author}}
  <section class="author-profile">
  {{#if image}}<img src="{{image}}" class="avatar" title="{{title}}" alt="Image of {{name}}"/>{{/if}}
    <p class="author-bio">
    <strong class="author-name">This post was written by {{name}}</strong>
  <br />
    {{#if bio}}
        {{bio}}
    {{else}}
    -
    {{/if}}
  </p>
  <div class="author-social right hide">
    {{#if twitter}}<a href="{{twitter_url}}" target="_blank"><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></a>{{/if}}
    {{#if facebook}}<a href="{{facebook_url}}" target="_blank"><i class="fa fa-facebook fa-2x" aria-hidden="true"></i></a>{{/if}}
    {{#if website}}<a href="{{website}}" target="_blank"><i class="fa fa-info fa-2x" aria-hidden="true"></i></a>{{/if}}
    </div>
  </section>
{{/author}}
