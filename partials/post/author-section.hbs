{{#author}}
  {{#if image}}<img src="{{image}}" class="avatar responsive-img" title="{{title}}" alt="Image of {{name}}"/>{{/if}}
  <section class="author-profile" style="background-image: url('{{cover}}');">
    <p class="author-bio">
    <strong>{{name}}</strong>
    {{#author}}{{#if twitter}}<a href="{{twitter_url}}" target="_blank"><i class="fa fa-twitter"></i></a>{{/if}}{{/author}}
    {{#author}}{{#if facebook}}<a href="{{facebook_url}}" target="_blank"><i class="fa fa-facebook"></i></a>{{/if}}{{/author}}
    <br />
    {{#if bio}}
        {{bio}}
    {{else}}
    -
    {{/if}}
  </p>
