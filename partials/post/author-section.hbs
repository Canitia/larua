{{#author}}
  <section class="author-profile">
  {{#if image}}<img src="{{image}}" class="avatar" title="{{title}}" alt="Image of {{name}}"/>{{/if}}
    <p class="author-bio">
    <h2 class="author-name">{{name}}</h2>
  <br />
    {{#if bio}}
        {{bio}}
    {{else}}
    -
    {{/if}}
  </p>
  <div class="author-social">
    {{#if twitter}}<a href="{{twitter_url}}" target="_blank"><i class="fa fa-twitter" aria-hidden="true"></i></a>{{/if}}
    {{#if facebook}}<a href="{{facebook_url}}" target="_blank"><i class="fa fa-facebook" aria-hidden="true"></i></a>{{/if}}
    {{#if website}}<a href="{{website}}" target="_blank"><i class="fa fa-info" aria-hidden="true"></i></a>{{/if}}
    </div>
  </section>
{{/author}}
