{{#foreach posts}}
  <div class="card medium">
              <div class="card-image">
                <a href="{{url}}"><img class="responsive-img" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" title="{{title}}" alt="Header image of {{title}}" /></a>
                <span class="card-title"><p class="posttitle">{{title}}</p> <p class="postdate right"><i class="fa fa-clock-o"></i><time datetime="{{date format="DD-MM-YYYY"}}"> {{date published_at timeago="true"}}</time></p></span>
              </div>
              <div class="card-content">
                <p>{{excerpt}}</p>
              </div>
              <div class="card-action">
                <a href="{{url}}">...</a>
              </div>
          </div>
{{/foreach}}
