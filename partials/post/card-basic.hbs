<div class="row">
{{#foreach posts}}

      <div class="col s4">
          {{#if feature_image}}
            <img src="{{img_url feature_image}}" class="homepage-image">
          {{/if}}
        <a href="{{url}}">{{title}}</a>
            <span class="badge">
              <time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
            </span>
      </div>

{{/foreach}}
</div>
