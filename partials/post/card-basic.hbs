{{#foreach posts}}
<div class="row">

  <div class="col s12 m12 l3">
    <div class="card-image">
    <a href="{{url}}"><img class="responsive-img" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" title="{{title}}" alt="Header image of {{title}}" /></a>
    </div>
  </div>

  <div class="col s12 m12 l9">
    <span class="card-title"><p class="posttitle"><a href="{{url}}">{{title}}</a></p> <p class="postdate right"><i class="fa fa-clock-o"></i><time datetime="{{date format="DD-MM-YYYY"}}"> {{date published_at timeago="true"}}</time></p></span>

      <div class="card-content">
        <p>{{excerpt characters="240"}}...</p>
      </div>
  </div>

</div>
{{/foreach}}
