<ul class="collection">
{{#foreach posts}}
<a href="{{url}}">
<li class="collection-item truncate">
  {{#if featured}}<i class="fa fa-star"></i>{{else}}<i class="fa fa-circle" aria-hidden="true"></i>{{/if}}
    {{title}}
    <span class="badge">
      <time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
    </span> 
</li>
</a>
{{/foreach}}
</ul>