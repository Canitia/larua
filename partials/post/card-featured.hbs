<div class="slider hide-on-med-and-down">
    <ul class="slides">
      {{#get "posts" limit="4" filter="featured:true" order="published_at desc" as |featured| }}
        {{#foreach featured}}
      <li>
        <a href="{{url}}"><img class="content-images-featured" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" title="{{title}}" alt="Header image of {{title}}" />
        </a>
        <div class="caption center-align">
          <h3 class="text-left-title-featured accentcolor2">{{title}}</h3>
        </div>
      </li>
      {{/foreach}}
      {{/get}}
    </ul>
  </div>
