
<div class="col s12 m12 l3 hide-on-med-and-down">
  <div class="card card-sidebar">
    <article>
      <h1 class="text-left-title blue darken-4">Recent posts</h1>
        <div>
                  <p>
                    {{#get "posts" limit="5" order="published_at desc" as |recent| }}
                    {{#foreach recent}}
                    <p><a href="{{url}}">{{title}}</a></p>
                   {{/foreach}}
                  {{/get}}
                  </p>
        </div>
    </article>
    </div>
</div>
