{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="row">
<div class="col s12 m12 l8 main-content">
{{#post}}
      <div class="card">
        <article>
        <p class="postdate right"><i class="fa fa-clock-o"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
      <div class="card-image">
        <img class="responsive-img" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" title="{{title}}" alt="Header image of {{title}}" />
        <span class="card-title">
          <p class="posttitle">{{title}}</p>
          </p></span>
      </div>
      <div class="card-content">
        <p>{{content}}</p>
      </div>
      <br />
      {{#if tags}}
      <div class="tags center-align">
      {{#foreach tags}}
          <div class="waves-effect waves-light chip accentcolor2">
          <a href="{{@blog.url}}/tag/{{name}}">{{name}}</a>
          </div>
      {{/foreach}}
    </div>
      {{/if}}

      {{> 'post/author-section'}}

      {{#if @labs.publicAPI}} <!-- checks if the public API is active in the labs section as it's needed for this item -->
        <h1 class="text-left-title-featured-sidebar accentcolor center-align"></i>Need something else to read?</h1>
        <ul class="collection" id="random-posts-list">
          {{! content of 'randompost.js' gets entered here! }}
        </ul>
      {{/if}}
{{! Disqus should be included right below this tag; for more information about this check the readme }}
      </article>
    </div>
{{/post}}
</div>
    {{> 'ui/sidebar'}}
</div>
