{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="row row-post">
<div class="card">
  {{#post}}
      <div class="col s12 m8 l8">
      <article>
      <h1 class="center">{{title}}</h1>
      <div class="post-subitems center">
        <i class="fa fa-clock-o"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
        <i class="fa fa-user" aria-hidden="true"></i>{{author}}
      </div>
      {{#if tags}}
        <div class="tags center-align hide">
          <div class="waves-effect waves-light chip accentcolor2">
          Tags:
          </div>
        {{#foreach tags}}
            <div class="waves-effect waves-light chip grey">
            <a href="{{@blog.url}}/tag/{{name}}">{{name}}</a>
            </div>
        {{/foreach}}
      </div>
      {{/if}}<!-- end tags if -->
      <hr />
      <div class="post-content">
        <p>{{content}}</p>
      </div>
      <hr />
         {{> 'post/author-section'}}
 
      <h3 class="h3-join-the-conversation">{{t "Join the conversation"}}</h3>
      {{! Disqus should be included right below this comment; for more information about this check the readme }}
        {{> 'post/comments'}}

      </article>
    </div>
{{/post}}
        {{> 'ui/sidebar'}}
</div>
</div>
