{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="maincontent">
                {{#post}}
                                    <article>
                                      <img class="content-images-individual" src="{{#if image}}
                                        {{image}}
                                      {{else}}
                                          {{@blog.cover}} {{/if}}"/>

                                    <h1 class="text-left-title blue darken-4"></i>{{title}}</h1>
                                    <h4><p class="text-left postdate"><i class="fa fa-user">{{author}}</i>{{#if featured}}<i class="fa fa-star">Featured</i>{{/if}} <i class="fa fa-calendar"></i>{{date format='DD-MM-YYYY'}}</p>
                                    </h4>
                                    <p class="text-justify-individual">{{content}}</p>
                                    <br />
                                    {{#if tags}}
                                    <div class="tags">
                                    {{#foreach tags}}
                                        <div class="chip">
                                        <a href="{{@blog.url}}/tag/{{name}}">{{name}}</a>
                                        </div>
                                    {{/foreach}}
                                  </div>
                                    {{/if}}
                                        {{> disqus}}


                                    </article>
                {{/post}}
</div>
