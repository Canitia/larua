{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
  <div class="row h-100 page-row">
  {{#post}}
      <div class="col col-xs-12 col-md-8 col-lg-8 main-content">
      <article>
        <div class="post-head">
              <h1 class="text-center">{{title}}</h1>
              <div class="post-subitems text-center">
                <i class="fa fa-clock-o"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
                <i class="fa fa-user" aria-hidden="true"></i>{{author}}
              </div>
        </div>
      <hr />
      <div class="post-content">
        <p>{{content}}</p>
      </div>


      <div class="cat-links">
          {{#if tags}}
            <div class="tagslist">
              <i class="fa fa-tags" aria-hidden="true"></i>

              {{#foreach tags}}
                  {{#if @last}}
                  <a href="{{@blog.url}}/tag/{{name}}">{{name}}</a>
                  {{else}}
                  <a href="{{@blog.url}}/tag/{{name}}">{{name}}</a>, 
                  {{/if}}
                {{/foreach}}
          </div>
          {{/if}}<!-- end tags if -->
      </div><!-- end cat links -->

      <hr />
         {{> 'post/author-section'}}
      </article>
    </div>
{{/post}}
        {{> 'ui/sidebar'}}

</div>
