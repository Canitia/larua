{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="row">
<div class="col s12 m12 l8 main-content">
{{#post}}
      <article>
      <img class="content-images-individual" title="{{title}}" alt="{{title}}" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}"/>

      <h1 class="text-left-title center-align"></i>{{title}}</h1>
      <h4 class="text-left-title-featured-slider center-align">
        <p class="postdate center-align">
          {{#if featured}}
          <i class="fa fa-star"> Featured</i>{{/if}}
          <i class="fa fa-calendar"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
          {{#author}}
          <div class="chip">
              <img alt="Contact Person" src="{{image}}"><a href="{{url}}">{{name}}</a>
          </div>
          {{/author}}
        </p>
      </h4>
      <p class="text-justify-individual">{{content}}</p>
      <br />
      {{#if tags}}
      <div class="tags center-align">
      {{#foreach tags}}
          <div class="chip accentcolor">
          <a href="{{@blog.url}}/tag/{{name}}">{{name}}</a>
          </div>
      {{/foreach}}
    </div>
      {{/if}}
