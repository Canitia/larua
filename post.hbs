{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
<div class="row">
<div class="col s12 m12 l8 main-content">
{{#post}}
      <div class="card">
        <article>
      <div class="card-image">
        <img class="responsive-img" src="{{#if image}}{{image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" title="{{title}}" alt="Header image of {{title}}" />
        <span class="card-title">
          <p class="posttitle">{{title}}</p> <p class="postdate right">{{#if featured}}<i class="fa fa-star"></i> {{/if}} <i class="fa fa-clock-o"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
          </p></span>
      </div>
      <div class="card-content">
        <p>{{content}}</p>
      </div>
      <br />
      {{#if tags}}
      <div class="tags center-align">
      {{#foreach tags}}
          <div class="waves-effect waves-light btn accentcolor2">
          <a href="{{@blog.url}}/tag/{{name}}">{{name}}</a>
          </div>
      {{/foreach}}
    </div>
      {{/if}}
